<%= content_for :header do %>
  <div class="page-header page-header-xs" data-parallax="true" style="background-image: url(/assets/fabio-mangione.jpg);">
  	<div class="filter"></div>
  </div>
<% end %>
<div class="section profile-content">
    <div class="container">
        <div class="owner">
            <div class="avatar">

              <%= gravatar_for current_user, class: 'img-circle img-no-padding img-responsive', style: 'width: 150px;' %>
            </div>
            <div class="name">
                <h4 class="title"><%= current_user.first_name %> <%= current_user.last_name %><br></h4>
		<h6 class="description">Music Producer</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 ml-auto mr-auto text-center">
                <p><%= current_user.bio %></p>
                <br>
                <btn class="btn btn-outline-default btn-round"><i class="fa fa-cog"></i> Hire Me</btn>
            </div>
        </div>
        <br>
        <div class="nav-tabs-navigation">
            <div class="nav-tabs-wrapper">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#follows" role="tab">Campaigns</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- Tab panes -->
        <div class="tab-content following">
            <div class="tab-pane active" id="follows" role="tabpanel">
                <div class="row">
                    <div class="col-md-6 ml-auto mr-auto">
                        <ul class="list-unstyled follows">
                          <%= render partial: 'brand', collection: @brands %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
