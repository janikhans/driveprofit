<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
  <%= gravatar_for(@user, class: 'mr-3 w-48 rounded') %>
  <div class="lh-100">
    <h6 class="mb-0 text-white lh-100"><%= @user.full_name %></h6>
    <small>Average Rides / Day: <%= @user.daily_reports.average(:ride_count) %></small>
  </div>
</div>

<div class="my-3 p-3 bg-white rounded box-shadow">
  <h6 class="border-bottom border-gray pb-2 mb-0">My Campaigns</h6>
  <%= render partial: 'app/shared/campaign', collection: @campaigns %>
</div>

<div class="my-3 p-3 bg-white rounded box-shadow">
  <h6 class="border-bottom border-gray pb-2 mb-0 d-flex justify-content-between">Payouts <span class="text-right">$<%= @payouts.sum(:amount) %> <small>(last month)</small></span></h6>
  <%= render @payouts %>
</div>
