
  <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
    <%= gravatar_for(current_user, class: 'mr-3 w-48 rounded') %>
    <div class="lh-100">
      <h6 class="mb-0 text-white lh-100"><%= current_user.full_name %></h6>
      <small>Average Trips / Day: <%= current_user.daily_reports.average(:ride_count) %></small>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="my-3 p-3 bg-white rounded box-shadow">
        <h6 class="border-bottom border-gray pb-2 mb-0">My Campaigns</h6>
        <%= render partial: 'app/shared/campaign', collection: @campaigns %>
        <small class="d-block text-right mt-3">
          <%= link_to 'Find More', app_campaigns_path %>
        </small>
      </div>
    </div>
    <div class="col-md-6">
      <div class="my-3 p-3 bg-white rounded box-shadow">
        <h6 class="border-bottom border-gray pb-2 mb-0 d-flex justify-content-between">My Payouts <span class="text-right"><%= number_to_currency(@payouts.sum(:amount), precision: 10, :strip_insignificant_zeros => true) %> <small>(last 30 days)</small></span></h6>
        <%= render @payouts %>
        <small class="d-block text-right mt-3">
          <a href="#">All Payouts</a>
        </small>
      </div>
    </div>
  </div>
