<div class="media text-muted pt-3">
  <%= brand_logo_for(campaign.brand, class: 'mr-2 rounded w-32') %>
  <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
    <div class="d-flex justify-content-between align-items-center w-100">
      <strong class="text-gray-dark font-16"><%= campaign.brand.name %></strong>
      <span class="font-16"><%= number_to_currency(campaign.price) %> / trip</span>
    </div>
    <span class="d-block font-16"><%= campaign.name %></span>
  </div>
</div>
