<div class="media text-muted pt-3">
  <%= brand_logo_for(campaign.brand, class: 'mr-2 rounded w-32') %>
  <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
    <div class="d-flex justify-content-start align-items-center w-100">
      <div class="d-flex flex-column"  style="flex: 5;">
        <strong class="text-gray-dark"><%= campaign.brand.name %> <small><%= campaign.name %></small></strong>
        <span><%= campaign.description %></span>
      </div>
      <div class="d-flex justify-content-end align-items-center" style="flex: 2;">
        <strong class="mr-3"><%= number_to_currency(campaign.price) %> / Trip </strong>
        <span>
          <% if current_user.campaigns.include?(campaign) %>
            <span class="text-success" style="font-size: 16px; font-weight: 600;">Joined</span>
          <% else %>
            <%= simple_form_for current_user.contracts.build, url: app_contracts_path do |f| %>
              <%= f.input_field :campaign_id, as: :hidden, value: campaign.id %>
              <%= f.submit 'Apply', class: 'btn btn-sm btn-primary' %>
            <% end %>
          <% end %>
        </span>
      </div>
    </div>
  </div>
</div>
